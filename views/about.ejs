    padding-left: 2rem;
    font-size: .6rem;
}
.nav li a {
    color: #fff;
    text-decoration: none;
    margin-right: 1rem;
}

}

@media screen and (max-width: 667px) {
    #menu-bar{
    margin-bottom: 2rem;
    
}


}

@media screen and (max-width:670px) {

.nav li a {
  margin-right: 6rem;
  font-size: xx-large;
}

.on-nav {
  margin-top: 6rem;
  display: block;
  z-index: 20;
  position: absolute;
  top: 1rem;
  padding-left: 4rem;
  font-size: 2.5rem;
}

.on-nav h1 {
   color: black;
   position: absolute;
   font-size: 3rem;
   /* bottom: 3rem; */
   
}

.on-nav ul{
  padding-top: 9rem;
}

.on-nav ul li {
  list-style: none;
}

.on-nav ul li a .fab {
  width: 6rem;
  height: 6rem;
  font-size: 5rem;
}

#menu{
  width: 40px;
  height: 40px;
  margin: 2rem 0 1.4rem auto;
  cursor: pointer;
  padding-top: 7px;
  padding-left: 7px;
  border: 2px solid #3C153B;
}
.bar{
  height: .4rem;
  width: 80%;
  background-color: #f1064c;
  display: block;
  border-radius: 5px;
  transition: 0.3s ease;
}
#bar1{
  transform: translateY(-4px);
}
#bar3{
  transform: translateY(4px);
}
.nav li a{
  color: #fff;
  text-decoration: none;
}
.nav li a:hover{
  font-weight: bold;
}
.nav li{
  list-style: none;
  padding: 16px 0;
}
.nav{
  padding: 0;
  margin: 0 20px;
  transition: 0.3s ease;
  display: none;
}
.menu-bg, #menu-bar{
  top: 0;
  right: 1rem;
  position: absolute;
}
 .menu-bg{
  background: #EFA9AE;
  z-index: 1;
  border-top-left-radius: 50%; 
  border-bottom-left-radius: 50%;
  transition: 1s ease;
 

}
#menu-bar{
  z-index: 2;	
}
 .change-bg{
   margin-left: 400px;
   width: 1200px;
   height: 100%;
   transform: translate(15px, 0px); 
   overflow: hidden;
 }
 
.change .bar{
  background-color: #f1064c;
}
.change #bar1{
  transform: translateY(4px) rotateZ(-45deg);
}
.change #bar3{
  transform: translateY(-6px) rotate(45deg);
}
.change #bar2{
  opacity: 0;
}
.change{
  display: block;
}
}







@media screen and (max-width:490px) {


.nav li a {
margin-right: 2rem;
font-size: larger;
}

.on-nav {
margin-top: 2rem;
display: block;
z-index: 20;
position: absolute;
top: .5rem;
padding-left: 2rem;
font-size: 1.5rem;
